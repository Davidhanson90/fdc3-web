{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "messaging-provider",
    "projectType": "library",
    "targets": {
        "build:relay": {
            "executor": "@nx/webpack:webpack",
            "options": {
                "webpackConfig": "{projectRoot}/webpack.config.ts",
                "outputPath": "{projectRoot}/dist/",
                "rootDir": "{projectRoot}"
            }
        },
        "build:library": {
            "executor": "@nx/js:tsc",
            "options": {
                "outputPath": "{projectRoot}/dist/",
                "rootDir": "{projectRoot}/src",
                "main": "{projectRoot}/dist/index.ts",
                "tsConfig": "{projectRoot}/tsconfig.json",
                "assets": [
                    {
                        "input": "{workspaceRoot}",
                        "glob": ".npmignore",
                        "output": "./"
                    },
                    {
                        "input": "{projectRoot}",
                        "glob": "package.json",
                        "output": "./"
                    },
                    {
                        "input": "{projectRoot}",
                        "glob": "README.md",
                        "output": "./"
                    }
                ]
            }
        },
        "test": {
            "executor": "@nx/vite:test",
            "options": {
                "passWithNoTests": true,
                "reportsDirectory": "../../build/coverage-results/messaging-provider",
                "coverage": true,
                "config": "projects/messaging-provider/vitest.config.ts"
            }
        },
        "test-watch": {
            "executor": "@nx/vite:test",
            "options": {
                "watch": true
            }
        },
        "test-ui": {
            "executor": "@nx/vite:test",
            "options": {
                "ui": true
            }
        }
    }
}